<div class="row">
    <h2 class="header white-text">Nueva Rutina</h2>
    <form class=" card col s12 grey darken-3" style="margin-top: 2%;">
        <div class="row">
            <div class="input-field col s6">
                <input id="instructor" type="text" class="validate" required>
                <label for="instructor">Instructor</label>
            </div>
            <div class="input-field col s6">
                <input id="ID" type="text" class="validate" required>
                <label for="ID">Cédula</label>
            </div>
            <div class="input-field col s12">
                <input id="date" type="text" class="datepicker" required>
                <label for="date">Fecha de Vencimiento</label>
            </div>
            <div class="input-field col s12">
                <input id="Desc" type="text" class="validate" required>
                <label for="Desc">Descripción</label>
            </div>
        </div>
        <div class="row center">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Agregar
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>