@model Baruk.Models.Persona


@if (Session["UserType"] != null && Session["UserType"].Equals("Admin"))
{
<div class="container body-content">
    <div class="row">
        @using (Html.BeginForm("NewCustomer", "Customer", FormMethod.Post, new { @class = " card col s12 blue-grey darken-1", @style = "margin-top: 2%;" }))
        {
            <form class="blue-grey darken-1 card col s12" style="margin-top: 2%;">
                <div class="center">
                    <span class="card-title white-text" style="font-size: 55px">Nuevo Cliente</span>
                </div>
                <div class="row">
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Cédula del Cliente</h6>
                                    @Html.TextBoxFor(model => model.Cedula, new { @class = "validate white-text", @type = "number", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "validate white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Nombre</h6>
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "validate white-text", @type = "text", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "validate white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Primer Apellido</h6>
                                    @Html.TextBoxFor(model => model.PrimerApellido, new { @class = "validate white-text", @type = "text", required = "required" })
                                    @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "validate white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>

                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Segundo Apellido</h6>
                                    @Html.TextBoxFor(model => model.SegundoApellido, new { @class = "validate white-text", @type = "text" })
                                    @Html.ValidationMessageFor(model => model.SegundoApellido, "", new { @class = "validate white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <table style="border-collapse: separate; border-spacing: 10px 5px;">
                    <tr>
                        <td width="25px">
                            <i class="small material-icons white-text">group</i>
                        </td>
                        <td>
                            <div class="input-field col s12w white-text">
                                <h6 class="grey-text text-lighten-2">Género</h6>
                                @Html.DropDownListFor(model => model.GeneroID, ViewBag.Genero as SelectList, "", new {@class="", required = "required" })
                                @Html.ValidationMessageFor(model => model.GeneroID, "", new { @class = "validate white-text" })
                            </div>

                        </td>
                    </tr>
                </table>


                <div class="row">
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">email</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Email</h6>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "validate white-text", @type = "email"})
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validate white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="row">
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">date_range</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Fecha Inicio</h6>
                                    @Html.TextBoxFor(model => model.FechaInicio, new { @class = "datepicker white-text validate required", @type = "text", required = "required"})
                                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "white-text" })
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row">
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Usuario del Cliente</h6>
                                    <input id="UsuarioCliente" name="UsuarioCliente" type="text" class="validate white-text" required>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row">
                    <table style="border-collapse: separate; border-spacing: 10px 5px;">
                        <tr>
                            <td width="25px">
                                <i class="small material-icons white-text">person</i>
                            </td>
                            <td>
                                <div class="input-field col s12">
                                    <h6 class="grey-text text-lighten-2">Contraseña del Cliente</h6>
                                    <input id="PasswrdCliente" name="PasswrdCliente" type="password" class="validate white-text" required>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row center">
                    <button class="btn waves-effect waves-light light-green accent-4" type="submit" name="action">
                        Agregar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        }
    </div>
</div>
        }
        @if (Session["UserType"] == null | (Session["UserType"] != null && (Session["UserType"].Equals("1") | Session["UserType"].Equals("2"))))
        {
            Response.Redirect("~/Information/_Denied");
        }
